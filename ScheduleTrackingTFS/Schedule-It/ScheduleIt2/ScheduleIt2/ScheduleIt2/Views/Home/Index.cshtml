<!DOCTYPE html>
<html>
<head>
    <script>
        function startTime() {
            var today = new Date();
            var h = today.getHours();
            var m = today.getMinutes();
            var s = today.getSeconds();
            m = checkTime(m);
            s = checkTime(s);
            document.getElementById('txt').innerHTML =
                h + ":" + m + ":" + s;
            var t = setTimeout(startTime, 500);
        }
        function checkTime(i) {
            if (i < 10) { i = "0" + i };  // add zero in front of numbers < 10
            return i;
        }
    </script>
</head>

<body onload="startTime()">

    <div id="txt" class="text-center mt-70"></div>




<form action="action_page.php" class="text-center mt-10 mb-100">

    <div class="container">
       
        <input class="mt-10" type="text" placeholder="Username" name="uname" required>
        <br />
        
        <input class="mt-10" type="password" placeholder="Password" name="psw" required>
        <br />
        <button type="submit" class="mt-10">Login</button>
        <button id="clockin" onclick="myFunction()" class="mt-10">Clock</button><br />

    </div>

    <div class="container mt-10">
        <span class="psw">Forgot <a href="#">password?</a></span>
    </div>
</form>

<script>
    function myFunction() {
        document.getElementById("clockin").innerHTML = "You have successfully clocked in";
    }
</script>


</body>

</html>